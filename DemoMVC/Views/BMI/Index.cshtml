@model DemoMVC.Models.BMI

<h2>Tính chỉ số BMI</h2>

<form asp-action="Index" method="post">
    <div>
        <label>Chiều cao (m):</label>
        <input asp-for="Height" type="number" step="0.01" required />
    </div>
    <div>
        <label>Cân nặng (kg):</label>
        <input asp-for="Weight" type="number" step="0.1" required />
    </div>
    <button type="submit">Tính BMI</button>
</form>

@if (ViewBag.Result != null && (double)ViewBag.Result > 0)
{
    <h3>BMI: @Math.Round((double)ViewBag.Result, 2)</h3>
    <h3>Phân loại: @ViewBag.Status</h3>
}
