@model IEnumerable<DemoMVC.Models.Employee>

<h2>Danh sách nhân viên</h2>

<p>
    <a asp-action="Create" class="btn btn-success">Thêm nhân viên</a>
</p>

<table class="table">
    <thead>
        <tr>
            <th>EmployeeId</th>
            <th>FullName</th>
            <th>Address</th>
            <th>Year of Birth</th>
            <th>Age</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
    <tr>
        <td>@item.EmployeeId</td>
        <td>@item.FullName</td>
        <td>@item.Address</td>
        <td>@item.Yearofbirth</td>
        <td>@item.Age</td>
        <td>
            <a asp-action="Edit" asp-route-id="@item.PersonId">Sửa</a> |
            <a asp-action="Details" asp-route-id="@item.PersonId">Chi tiết</a> |
            <a asp-action="Delete" asp-route-id="@item.PersonId">Xoá</a>
        </td>
    </tr>
}
    </tbody>
</table>