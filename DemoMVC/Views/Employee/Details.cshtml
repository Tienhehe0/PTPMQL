@model DemoMVC.Models.Employee

@{
    ViewData["Title"] = "Chi tiết nhân viên";
}

<h2>@ViewData["Title"]</h2>

<div>
    <dl class="row">
        <dt class="col-sm-3">Employee ID</dt>
        <dd class="col-sm-9">@Model.EmployeeId</dd>

        <dt class="col-sm-3">Full Name</dt>
        <dd class="col-sm-9">@Model.FullName</dd>

        <dt class="col-sm-3">Address</dt>
        <dd class="col-sm-9">@Model.Address</dd>

        <dt class="col-sm-3">Year of Birth</dt>
        <dd class="col-sm-9">@Model.Yearofbirth</dd>

        <dt class="col-sm-3">Age</dt>
        <dd class="col-sm-9">@Model.Age</dd>
    </dl>
</div>

<p>
    <a asp-action="Edit" asp-route-id="@Model.PersonId" class="btn btn-warning">Chỉnh sửa</a>
    <a asp-action="Index" class="btn btn-secondary">Quay lại</a>
</p>