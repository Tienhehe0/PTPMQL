@model DemoMVC.Models.Person

@{
    ViewData["Title"] = "Delete Person";
}

<h2>Xóa thông tin</h2>

<h4>Bạn có chắc chắn muốn xóa người này?</h4>
<hr />

<dl class="row">
    <dt class="col-sm-2">Họ và tên</dt>
    <dd class="col-sm-10">@Model.FullName</dd>

    <dt class="col-sm-2">Địa chỉ</dt>
    <dd class="col-sm-10">@Model.Address</dd>

    <dt class="col-sm-2">Năm sinh</dt>
    <dd class="col-sm-10">@Model.Yearofbirth</dd>

    <dt class="col-sm-2">Tuổi</dt>
    <dd class="col-sm-10">@Model.Age</dd>
</dl>

<form asp-action="DeleteConfirmed" method="post">
    <input type="hidden" asp-for="PersonId" />
    <button type="submit" class="btn btn-danger">Xóa</button>
    <a asp-action="Index" class="btn btn-secondary">Hủy</a>
</form>