@model DemoMVC.Models.Student

@{
    ViewData["Title"] = "Xoá sinh viên";
}

<h2 class="text-center text-danger">XÁC NHẬN XOÁ SINH VIÊN</h2>

<div class="alert alert-warning mt-3">
    <strong>Bạn có chắc chắn muốn xoá sinh viên này không?</strong>
</div>

<div class="border p-3 rounded">
    <p><strong>Mã STD:</strong> @Model.StudentID</p>
    <p><strong>Họ và tên:</strong> @Model.FullName</p>
    <p><strong>Ngày sinh:</strong> @Model.DateOfBirth.ToString("dd/MM/yyyy")</p>
    <p><strong>Địa chỉ:</strong> @Model.Address</p>
    <p><strong>Email:</strong> @Model.Email</p>
</div>

<form asp-action="Delete" method="post" class="mt-3">
    <input type="hidden" asp-for="StudentID" />
    <button type="submit" class="btn btn-danger">Xoá</button>
    <a asp-action="Index" class="btn btn-secondary">Huỷ</a>
</form>
