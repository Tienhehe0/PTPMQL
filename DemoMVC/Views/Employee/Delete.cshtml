@model DemoMVC.Models.Employee

@{
    ViewData["Title"] = "Xóa nhân viên";
}

<h2>@ViewData["Title"]</h2>

<h3>Bạn có chắc chắn muốn xóa nhân viên này?</h3>

<div>
    <h4>@Model.FullName</h4>
    <dl class="row">
        <dt class="col-sm-3">Employee ID</dt>
        <dd class="col-sm-9">@Model.EmployeeId</dd>

        <dt class="col-sm-3">Address</dt>
        <dd class="col-sm-9">@Model.Address</dd>

        <dt class="col-sm-3">Year of Birth</dt>
        <dd class="col-sm-9">@Model.Yearofbirth</dd>

        <dt class="col-sm-3">Age</dt>
        <dd class="col-sm-9">@Model.Age</dd>
    </dl>
</div>

<form asp-action="Delete">
    <input type="hidden" asp-for="PersonId" />
    <button type="submit" class="btn btn-danger">Xóa</button>
    <a asp-action="Index" class="btn btn-secondary">Hủy</a>
</form>